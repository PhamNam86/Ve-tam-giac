#include <stdio.h>


int main()
{
   
   for (int i = 1; i <= 11; i++)
   {
       int j;
       
   

       for (j = 1; j <= i; j++)
       {
           printf(" ");
       }
       
       for (j = 1; j <= 1; j++)
       {

           printf("*");

       }
       
       if (i == 10 || i == 9 || i == 8 || i == 7 || i == 6 || i == 5 || i == 4 || i == 3 || i == 2 )
   {
       
       
       for (int k = 10; k >= i; k--)
       {

           
           printf(" ");
       }
       

       

       for (int k = 9; k >= i; k--)
       {
       
       
           printf(" ");

       }
       
       for (int k = 1; k <= 1; k++)
       {

           printf("*");

       }

   }

       if (1 == i)
       {
           for (int k = 1; k <= 10; k++)
           {

               printf("*");
           }




           for (int k = 9; k >= 1; k--)
           {


               printf("*");

           }

           for (int k = 1; k <= 1; k++)
           {

               printf("*");

           }
       }

       
     
       printf("\n");
       

   }

  return 0;
}
