#include <stdio.h>


int main()
{
   
   for (int i = 0; i <= 10; i++)
   {
       int j;
  
   

       for (j = 10; j >= i; j--)
       {
           printf(" ");
       }
       
       for (j = 1; j <= 1; j++) //
       {

           printf("*");

       }
       
       if (i == 9 || i == 8 || i == 7 || i == 6 || i == 5 || i == 4 || i == 3 || i == 2 || i == 1)
       {
       
       
       for (int k = 1; k <= i; k++)
       {

           
           printf(" ");
       }
       

       

       for (int k = i - 1; k >= 1; k--)
       {
       
       
           printf(" ");

       }
       
       for (int k = 1; k <= 1; k++)
       {

           printf("*");

       }

       }

       if (10 == i) 
       {
           for (int k = 1; k <= i; k++)
           {


               printf("*");
           }




           for (int k = i - 1; k >= 1; k--)
           {


               printf("*");

           }

           for (int k = 1; k <= 1; k++)
           {

               printf("*");

           }
       }
     
       printf("\n");
       

   }

  return 0;
}
